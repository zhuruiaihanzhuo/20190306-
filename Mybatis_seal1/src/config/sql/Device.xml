<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Device">

  <resultMap type="bean.Device" id="DeviceResult">
  <id column="id" jdbcType="INTEGER" property="id"/>
  <association property="area" column="area_id" select="Area.selectAreaById"></association>
  <association property="leixing" column="category_id" select="Area.selectAreaById"></association>
 
  </resultMap>

  <select id="selectDeviceById"  parameterType="int" resultMap="DeviceResult">
    SELECT * FROM Device WHERE id=#{id}
   
  </select>
<select id="selectDevice"   parameterType="int"  resultMap="DeviceResult">
    select * from  device d  LEFT JOIN area a ON d.area_id=1
   
  </select>


  <insert id="add" parameterType="bean.MieHuo" useGeneratedKeys="false">
    INSERT INTO MIEHUO
    ( 
    jiancharen,
    bumen,
    shebeibianhao,
    shuliang,
    beizhu,
    date
    )
    VALUES
    ( 
    #{jiancharen},
    #{bumen},
    #{shebeibianhao},
    #{shuliang},
    #{beizhu},
    #{date}
    )
  </insert>

